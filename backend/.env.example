# ==================== Application Configuration ====================
# Environment: development | staging | production
NODE_ENV=development

# Server port
PORT=8000

# ==================== Database Configuration ====================
# PostgreSQL connection strings
# For local development: postgresql://user:password@localhost:5432/dbname
# For Supabase: Use connection pooler URL for DATABASE_URL and direct URL for DIRECT_URL
DATABASE_URL="postgresql://postgres:password@localhost:5432/yanpsi?schema=public"
DIRECT_URL="postgresql://postgres:password@localhost:5432/yanpsi?schema=public"

# ==================== Authentication & Security ====================
# JWT Secrets (CHANGE THESE IN PRODUCTION!)
# Generate secure secrets: node -e "console.log(require('crypto').randomBytes(64).toString('hex'))"
JWT_ACCESS_SECRET=change-this-to-a-random-64-character-hex-string-in-production
JWT_REFRESH_SECRET=change-this-to-another-random-64-character-hex-string-in-production

# JWT Token Expiry
# Access token: 15m = 15 minutes, 1h = 1 hour
# Refresh token: 7d = 7 days, 30d = 30 days
JWT_ACCESS_EXPIRY=15m
JWT_REFRESH_EXPIRY=7d

# ==================== CORS & Frontend Configuration ====================
# Frontend application URL (used for email links and CORS)
FRONTEND_URL=http://localhost:3000

# Cookie Configuration
# Set COOKIE_DOMAIN to your domain in production (e.g., .yourdomain.com)
COOKIE_DOMAIN=localhost
# Set COOKIE_SECURE=true in production (requires HTTPS)
COOKIE_SECURE=false

# ==================== Email Service (Resend) ====================
# Get your API key from: https://resend.com/api-keys
RESEND_API_KEY=re_your_resend_api_key_here
# Sender email (must be verified domain in Resend)
EMAIL_FROM=noreply@yourdomain.com

# ==================== File Storage (Cloudinary) ====================
# Get credentials from: https://cloudinary.com/console
CLOUDINARY_CLOUD_NAME=your_cloud_name
CLOUDINARY_API_KEY=your_api_key
CLOUDINARY_API_SECRET=your_api_secret

# ==================== Payment Gateway (Midtrans) ====================
# Get credentials from: https://dashboard.midtrans.com/settings/config_info
# Use Sandbox keys for development, Production keys for production
MIDTRANS_SERVER_KEY=your_midtrans_server_key
MIDTRANS_CLIENT_KEY=your_midtrans_client_key
# Webhook notification URL (update domain in production)
MIDTRANS_NOTIFICATION_URL=http://localhost:8000/api/payments/midtrans/notification

# ==================== Database Seeding ====================
# Admin user credentials for database seeding (REQUIRED for prisma db seed)
# These values are ONLY used during initial database seeding
ADMIN_EMAIL=your_admin_email@example.com
ADMIN_PASSWORD=your_strong_admin_password
ADMIN_NAME=Your Admin Name